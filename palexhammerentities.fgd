@PointClass base(Targetname, Parentname, Origin, Angles, EnableDisable) studio("models/editor/playerstart.mdl") = point_playercontrol : "Allows manipulating a select player's character as if it were part of the map."
[
animbrate(integer) : "Animation Playback Rate" : 1 : "The speed of the animation the player plays."
blockedinputs(integer) : "Outputted Player Inputs" : 0 : "List of IN_ inputs represented as a single bitwise integer that will be considered as an output to this entity. use this site for reference: https://wiki.facepunch.com/gmod/Enums/IN."
inputregister(integer) : "Registered Player Inputs" : 0 : "List of IN_ inputs represented as a single bitwise integer that will determine what player inputs are registered by the game. use this site for reference: https://wiki.facepunch.com/gmod/Enums/IN."
clearmovement(boolean) : "Clear Player Movement" : 1 : "Whether to stop the player from controlling their own movement."
gotopos(boolean) : "Player Goes To This Entity" : 0 : "Makes the player move to this entity."
acceptrange(integer) : "Acceptance Range" : 16 : "The range in which the player no longer has to keep moving toward this entity. Setting it to zero will cause the player to shake. *Requires Player Goes To This Entity to be true."
desiredspeed(integer) : "Desired Speed" : 128 : "The desired speed in which the player may move towards us."
faceangles(boolean) : "Player Faces Entity's Angles" : 0 : "Makes the player's angles match this entity's angles."
freezeplayer(boolean) : "Freeze Players" : 0 : "Makes the player frozen. This will disable their gravity and movement, but will allow them to look around and trigger input calls, as well as take damage. This also means its not compatible with Player Goes To This Entity"

output OnATTACK(void) : "Fired when the player presses the primary attack bind."
output OnATTACK2(void) : "Fired when the player presses the secondary attack bind."
output OnJUMP(void) : "Fired when the player presses the jump bind."
output OnDUCK(void) : "Fired when the player presses the jump bind."
output OnFORWARD(void) : "Fired when the player presses the forward bind."
output OnMOVELEFT(void) : "Fired when the player presses the move left bind."
output OnMOVERIGHT(void) : "Fired when the player presses the move right bind."
output OnBACK(void) : "Fired when the player presses the back bind."
output OnSPEED(void) : "Fired when the player presses the speed (used typically as run) bind."
output OnUSE(void) : "Fired when the player presses the use bind."
output OnRELOAD(void) : "Fired when the player presses the reload bind."
output OnWEAPON1(void) : "Fired when the player presses the alt1 bind."
output OnWEAPON2(void) : "Fired when the player presses the alt1 bind."
output OnSCORE(void) : "Fired when the player presses the walk bind."
output OnWALK(void) : "Fired when the player presses the walk bind."
output OnPlayerDeath(void) : "Fired when the player dies."
output OnPlayerHurt(void) : "Fired when the player is hurt."

input AddPlayer(string) : "Adds a player to control over. (Use !Activator)"
input AddAllPlayers(void) : "Adds all players to this entity's control."
input ReleasePlayer(string) : "Remove a player to control over. (Use !Activator)"
input ReleaseAllPlayers(void) : "Removes all players from this entity's control."
input SetGoToPos(integer) : "Makes the player move toward this position."
input SetShouldFaceDirection(integer) : "Makes the player face the same direction as this entity."
input SetActivity(string) : "set the player's currently played animation"
input SetAnimPlaybackRate(string) : "set the player's currently played animation"
input SetOutputInputs(integer) : "sets the inputs that are considered by this entity's inputs."
input SetRegisteredInputs(integer) : "sets the inputs that are passed at all by the game."
input HurtPlayer(integer) : "Hurts the player by this amount."
input SetMoveAcceptRange(integer) : "The player may stop moving towards us once they're within this range."
input SetMoveDesiredSpeed(integer) : "The desired speed in which the player should move toward this entity."
input KillPlayer(void) : "Kills the players."
input SetPlayersWeapon(string) : "Sets the players currently held weapon."
input ClearPlayersMovement(integer) : "Whether to clear the player's movement or not."
input SetFreezePlayer(integer) : "Whether the player should be frozen upon being subjected. This also applies to current subjects."
]

