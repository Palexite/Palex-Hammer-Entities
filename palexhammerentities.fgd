@PointClass base(Targetname, Parentname, Origin, Angles) iconsprite("editor/env_shake_dynamic.vmt") = env_shake_dynamic : "Custom designed shake effects with more functionality."
[
	linearamp(vector) : "Linear Amplitude" : "4 4 4" : "How much the camera shakes in terms of it's seperate positional elements. "
	angularamp(vector) : "Angular Amplitude" : "2 2 2" : "How much the camera shakes in terms of it's seperate angles."
	frequency(integer) : "Frequency" : 2 : "How much the camera shakes throughout time."
	duration(integer) : "Duration" : 2 : "How long the shake lasts in seconds."
	radius(integer) : "Radius" : 512 : "How far the camera shakes."
	engine(choices) : "Engine" : "SDKReplica" : "Which shake function to use. SDKReplica is an exact replica of Source Engine's default util.Screenshake(). You can design your own in lua/autorun/dynamotion_preview.lua, You'll need some understanding of lua though."
		= [
		"SDKReplica" : "SDKReplica"
	]

	maxphysics(integer) : "Max Physics Objects" : 16 : "The maximum number of physics objects that can be affected by this entity. This is helpful for saving server resources and mitigating crashes."
	maxcorrections(integer) : "Max Physics Corrections" : 1 : "How many physics objects can be affected each tick."
	tickduration(integer) : "Physics Tick Duration" : 1 : "the duration in seconds until the next tick. (For Physics Only)"

	input StartDynamicShake(string) : "Starts a shake but with the given parameters. This requires MULTIPLE parameters. The format is this <String> Engine@ <Vector> LinearAmplitude@ <Vector> AngularAmplitude@ <int> Frequency@ <int> Duration@ <int> Radius@"
	input StartShake(void) : "Starts a shake with the built-in key values of the entity."
	input StartPhysicsShake(void) : "Starts server-sided physics shake."
]

@PointClass base(Targetname, Parentname, Origin, Angles) = logic_playerevaluator : "An entity designed to evaluate statistics of the player for mathematical operations."
[
	principle(choices) : "Principle" : "Speed" : "What should be evaluated from the player."
	= [
	"Speed" : "Speed"
	"MaxSpeed" : "MaxSpeed"
	"Health" : "Health"
	"MaxHealth" : "MaxHealth"
	"JumpPower" : "JumpPower"
	"Scale" : "Scale"
	"ViewPunch" : "ViewPunch"
	"Frags" : "Frags"
	"Armor" : "Armor"
	]
	showui(boolean) : "Show UI" : 0 : "Whether or not to show the UI of the evaluator. This is seperate from the progress bar." 
	showpb(boolean) : "Show Progress Bar" : 0 : "Whether or not to show a progress bar. Useful for task-like stuff that is being used by the evaluator." 
	localizeui(boolean) : "Localize UI" : 0 : "Whether or not the user interface should only be rendered for the player being evaluated."
	uiscale(integer) : "UI Scale" : 1 : "Scale of the user interface."
	bar(integer) : "Bar" : 100 : "Used to determine whether the value of the player is considered positive or negative."
	barmargin(integer) : "Neutrality" : 25 : "The margin in which the value of the player is not considered positive or negative."
	maxprogress(integer) : "Max Progress" : 100 : "The maximum progress to use for the progress bar."

	input SetPlayerUsingActivator(void) : "Sets the player we're evaluating."
	input SetPrinciple(string) : "Sets what we're evaluating."
	input GetValue(void) : "Makes this entity fire it's OnGetValue output for it's value to be retrieved. This can be done by leaving the Parameter field blank during an Output."
	input SetShowProgressBar(integer) : "Whether or not to show the progress bar. Useful for task-like stuff that is being used by the evaluator."
	input SetShowUI(integer) : "Whether or not to show the UI."
	input SetShowBar(integer) : "Sets where exactly the players status is either positive or negative."
	input SetMargin(integer) : "Sets the marginality of the Bar."
	input SetUIScale(integer) : "Sets the scale of the UI."
	input SetProgress(integer) : "Sets the progress of the progress bar."
	input SetMaxProgress(integer) : "Sets the maximum progress of the progress bar."

	output OnNegative(void) : "When the value turns up negative."
	output OnPositive(void) : "when the value turns up positive." 
	output OnNeutral(void) :  "When the value turns up neutral."

	output OnGetValue(integer) : "When the GetValue() input is called. This is where you get to use the value by having the parameter field be blank."
]

@PointClass base(Targetname, Parentname, EnableDisable) = env_qte : "An entity that Adds Quick Time Events which appear to a specific player. Does not consume inputs, so its recommended with point_playercontrol."
[
ui(string) : "UI Style" : "qte_zombiesurvival" : "Which QTE UI to use. These are located in lua/vgui/. 'qte_zombiesurvival' is a valid option."
keypress(string) : "Key" : "E" : "Which Key is represented in the QTE. Do note that QTE vguis can interpret this differently depending on the key. (E.G: using a spacebar icon instead of spaced text.)"
scale(integer) : "UI Scale" : 1 : "The visual scale of the QTE."
offset(vector) : "UI Offset" : "0 0 0" : "The visual offset of the QTE."
locktoscreen(boolean) : "Lock To Player's Screen" : 1 : "Causes the UI element to be attached to the player's screen. NOTE: This is still in 3D space but is treated AS IF it were a 2D panel."
locktodirection(boolean) : "Lock To Player's Direction" : 1 : "Causes the UI element to always face the LocalPlayer."
ignorez(boolean) : "Ignore Z" : 1 : "Causes the UI element to always render on top of everything else."

input Success(void) : "Causes a success animation to be played and the QTE dismissed."
input Fail(void) : "Causes a Fail animation to be played and the QTE dismissed."
input SetKey(string) : "Sets the key to be used for the QTE."
input LockToScreen(integer) : "Whether or not to lock the UI to the player's screen."
input LockToPlayerDirection(integer) : "Whether or not to lock the UI to the player's direction."
input SetPlayerViaActivator(void) : "Sets the player that will see this QTE using the relevant activator of the input."
input ReleasePlayer(void) : "Releases the player so they will no longer see this QTE."
input SetIgnoreZ(integer) : "Whether or not to render the UI on top of everything else."
input SetScale(integer) : "The scale of the UI."
input SetOffset(vector) : "Sets the QTE Offset."

output OnSuccess(void) : "On Success."
output OnFail(void) : "On Fail."
]




